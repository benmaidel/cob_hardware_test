<?xml version="1.0"?>
<launch>

	<!-- upload default configurations -->
	<include file="$(find cob_default_robot_config)/upload_param.launch" />

    <!-- load testparameter-->
	    <!-- lower robot -->    
    <rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/laser_front.test.yaml" command="load"/>  
 	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/laser_rear.test.yaml" command="load"/>   
  	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/laser_top.test.yaml" command="load"/>  	
  	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/relayboard.test.yaml" command="load"/>
  	    <!-- upper robot -->		
    <!--rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/kinect.test.yaml" command="load"/-->  
    <!-- tbd: add test for swissranger -->
 	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/prosilica_left.test.yaml" command="load"/>   
	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/components/prosilica_right.test.yaml" command="load"/> 

	    <!-- additional packages -->
	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/tools/diagnostics_aggregator.yaml" command="load"/>
	<rosparam ns="cob_hardware_test" file="$(find cob_hardware_test)/tools/wifi_monitor.test.yaml" command="load"/>
	
	<!-- start hztests -->
	<test test-name="cob_hardware_test" pkg="cob_hardware_test" type="hztests" name="cob_hardware_test" time-limit="1000.0" />
	</include>

</launch>
