<?xml version="1.0"?>
<launch>

    <arg name="robot" value="cob4"/>

    <include unless="$(arg sim)" file="$(find realsense_camera)/launch/zr300_nodelet_rgbd.launch">
        <arg name="camera" value="torso_cam3d_left"/>
        <arg name="num_worker_threads" value="2" />
        <arg name="serial_no" value=""/>
    </include>

    <include unless="$(arg sim)" file="$(find realsense_camera)/launch/zr300_nodelet_rgbd.launch">
        <arg name="camera" value="torso_cam3d_right"/>
        <arg name="num_worker_threads" value="2" />
        <arg name="serial_no" value=""/>
    </include>

    <include unless="$(arg sim)" file="$(find realsense_camera)/launch/zr300_nodelet_rgbd.launch">
        <arg name="camera" value="torso_cam3d_down"/>
        <arg name="num_worker_threads" value="2" />
        <arg name="serial_no" value=""/>
    </include>
 
    <include file="$(find mojin_bringup)/drivers/light.launch">
        <arg name="robot" value="$(arg robot)"/>
        <arg name="component_name" value="light_base"/>
    </include>

    <!-- start light script -->
    <node ns="light_torso" pkg="cob_devices_test" type="test_light.py" name="test_light" output="screen"/>

    <!-- start rviz with configuration -->
    <node pkg="rviz" type="rviz" name="$(anon rviz)" args="-d $(find cob_devices_test)/config/Inbetriebnahme.rviz" respawn="false" output="screen" />

</launch>
